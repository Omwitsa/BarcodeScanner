<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/basket"
        android:id="@+id/imagehead"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/topL"
        android:layout_below="@+id/imagehead"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <Button
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:text="VIEW TODAY"
            android:background="@drawable/roundbtn"
            android:id="@+id/viewToday"
            android:textColor="@color/white"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/viewAll"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_gravity="start"
            android:background="@drawable/roundbtn"
            android:text="VIEW ALL"
            android:textColor="@color/white"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/topL"
        android:id="@+id/topl2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <Button
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:background="@drawable/roundbtn"
            android:id="@+id/exporttoday"
            android:textColor="@color/white"
            android:text="DOWNLOAD" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <Button
            android:layout_gravity="start"
            android:id="@+id/selectdate"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:background="@drawable/roundbtn"
            android:textColor="@color/white"
            android:text="SELECT DATE" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_below="@+id/topl2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:textSize="80sp"
            android:text=""
            android:textColor="@color/white"
            android:background="@drawable/circle"
            android:id="@+id/truck_count" />
    </LinearLayout>

</RelativeLayout>