<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Products">

    <ListView
        android:id="@+id/productListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="292dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/productListView"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <Button
            app:layout_constraintBottom_toBottomOf="@+id/customerListView"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10px"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Product Sync"
            android:layout_marginLeft="10px"
            android:id="@+id/productSyncBtn"
            android:layout_gravity="center_horizontal"
            tools:ignore="MissingConstraints" />

        <Button
            app:layout_constraintBottom_toBottomOf="@+id/customerListView"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10px"
            android:layout_width="200dp"
            android:layout_marginLeft="10px"
            android:layout_height="wrap_content"
            android:text="Line Sync"
            android:id="@+id/lineSyncBtn"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>