<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trucks">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/truck"
        android:id="@+id/imagehead"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_below="@+id/imagehead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Today is: "
        android:id="@+id/txtDate"
        android:textSize="16sp"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:fontFamily="serif-monospace"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_below="@+id/txtDate"
        android:padding="10sp"
        android:id="@+id/rowTruck1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <Button
            android:background="@drawable/roundbtn"
            android:textColor="@color/white"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:id="@+id/truck1"
            android:text="TRUCK 1"



            />

        <TextView
            android:id="@+id/txtTruck1"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/textview_background"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"

            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout
        android:padding="10sp"
        android:id="@+id/rowTruck2"
        android:layout_below="@+id/rowTruck1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/roundbtn"
            android:textColor="@color/white"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:id="@+id/truck2"
            android:text="TRUCK 2"


            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:id="@+id/txtTruck2"
            android:textSize="20sp"
            android:text=""
            android:background="@drawable/textview_background"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"

            android:layout_marginLeft="10sp"
            />

    </LinearLayout>
    <LinearLayout
        android:padding="10sp"
        android:id="@+id/rowTruck3"
        android:layout_below="@+id/rowTruck2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/roundbtn"
            android:textColor="@color/white"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:id="@+id/truck3"
            android:text="TRUCK 3"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:id="@+id/txtTruck3"
            android:textSize="20sp"
            android:text=""
            android:background="@drawable/textview_background"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"


            android:layout_marginLeft="10sp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTotal"
        android:text="TOTALS: "
        android:layout_below="@id/rowTruck3"
        android:background="@drawable/btn_redrose"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:layout_marginTop="15sp"
        />


</RelativeLayout>